---
import type { Tool } from '../data/tools';

interface Props {
  tool: Tool;
  lang: string;
  title: string;
  description: string;
}

const { tool, lang, title, description } = Astro.props;
---
<a 
  href={`/${lang}/ferramentas/${tool.slug}`}
  class="group block bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 p-6 border border-gray-200 dark:bg-gray-800 dark:border-gray-700"
>
  <h3 class="text-xl font-bold text-gray-800 group-hover:text-purple-600 transition-colors duration-300 dark:text-gray-100 dark:group-hover:text-purple-400">
    {title}
  </h3>
  <p class="text-gray-600 mt-2 dark:text-gray-400">
    {description}
  </p>
  <span class="mt-4 inline-block text-sm font-semibold text-purple-500 group-hover:text-purple-700 dark:text-purple-400 dark:group-hover:text-purple-300">
    {tool.category}
  </span>
</a>