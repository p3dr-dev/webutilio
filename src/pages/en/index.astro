---
import Layout from '../../layouts/Layout.astro';
import en from '../../i18n/en.json';
import { tools } from '../../data/tools';
import ToolCard from '../../components/ToolCard.astro';
---

<Layout title={en.site.plainTitle} description={en.site.description} lang={en.site.lang}>
  <section class="text-center py-12">
    <h1 class="text-5xl font-extrabold text-gray-800 dark:text-gray-100 leading-tight mb-4"
      set:html={en.site.title}
    ></h1>
    <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto mb-10">
      {en.site.description}
    </p>
  </section>

  <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {tools.map(tool => (
      <ToolCard 
        tool={tool} 
        lang="en"
        title={en.tools[tool.slug].title}
        description={en.tools[tool.slug].description}
      />
    ))}
  </section>
</Layout>